<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 style="margin-bottom: 30px">Регистрация > Шаг 1</h3>
            <div class="form-group">
                <form action="" method="post">
                    <label for="login">Логин</label>
                    <input type="text" id="login" name="login" value="{{ register.login }}" class="form-control" required>
                    <label for="password">Пароль</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" value="{{ register.email }}" class="form-control" required>
                    <label for="name">ФИО</label>
                    <input type="text" id="name" name="name" value="{{ register.name }}" class="form-control" required>
                    <ul class="pager">
                        <li class="next"><button type="submit" class="btn btn-primary">Далее <span>&rarr;</span></button></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>